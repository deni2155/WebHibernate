<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.css</url-pattern>
            <url-pattern>*.js</url-pattern>
        </jsp-property-group>
    </jsp-config>
        <!--
Фильтр кодировки
    -->
    <filter>
        <filter-name>encodingRequestFilter</filter-name>
        <filter-class>com.kindcat.archivemedo.filter.common.EncodingRequestFilter</filter-class>
    </filter>
    <!--
Фильтр проверки сессии пользователя
    -->
    <filter>
        <filter-name>existsSessionFilter</filter-name>
        <filter-class>com.kindcat.archivemedo.signin.ExistsSessionFilter</filter-class>
    </filter>
        <!--
Фильтр кодировки
    -->
    <filter-mapping>
        <filter-name>encodingRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--
Фильтр проверки сессии пользователя
    -->
    <filter-mapping>
        <filter-name>existsSessionFilter</filter-name>
        <url-pattern>/</url-pattern>
        <!--dispatcher>INCLUDE</dispatcher-->
    </filter-mapping>
    <!--
Логирование
    -->
    <listener>
        <listener-class>
            com.kindcat.archivemedo.context.ReinitializingContext
        </listener-class>
    </listener>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <!--welcome-file-list>
        <welcome-file>signin.jsp</welcome-file>
    </welcome-file-list-->
</web-app>
